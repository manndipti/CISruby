<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<div class= "panel-body">

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to 'Show', order , class: 'btn btn-primary btn-xm'%></td>
        <td><%= link_to 'Edit', edit_order_path(order), class: 'btn btn-info btn-xm' %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', stores_path, class: 'btn btn-success btn-xm' %>
</div>
