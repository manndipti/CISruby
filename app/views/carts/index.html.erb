<p id="notice"><%= notice %></p>

<h1>Listing Carts</h1>
<div class= "panel-body">


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <div>
       <span> <%= link_to 'Show', cart, class: 'btn btn-primary btn-xm' %>
        <%= link_to 'Edit', stores_url, class: 'btn btn-info btn-xm' %>
        <%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xm' %></span>
      </div>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class= "panel-body">

<%= link_to 'New Cart', stores_url, class: 'btn btn-success btn-xl' %>
</div>
